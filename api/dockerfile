# Dockerfile - API FastAPI avec Poetry
FROM python:3.11-slim

# Métadonnées
LABEL description="API de Scoring Crédit avec Poetry"
LABEL version="1.0.0"

# Variables d'environnement
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    POETRY_NO_INTERACTION=1 \
    POETRY_VENV_IN_PROJECT=1 \
    POETRY_CACHE_DIR=/tmp/poetry_cache \
    POETRY_HOME="/opt/poetry" \
    POETRY_VERSION=2.1.4 \
    PORT=8000 \
    MODEL_PATH=best_credit_model.pkl

# Créer un utilisateur non-root pour la sécurité
RUN groupadd -r appuser && useradd -r -g appuser appuser

# Répertoire de travail
WORKDIR /app

# Installation des dépendances système
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Installation de Poetry
RUN pip install --no-cache-dir poetry==$POETRY_VERSION

# Configuration Poetry pour conteneur
ENV PATH="$POETRY_HOME/bin:$PATH"

# Copier les fichiers de configuration Poetry
COPY pyproject.toml poetry.lock* ./

# Installer les dépendances uniquement (sans le package lui-même)
RUN poetry install --only=main --no-root && rm -rf $POETRY_CACHE_DIR

# Copier le code source
COPY . .

# Installer le package en mode development
RUN poetry install --only-root

# Créer les répertoires nécessaires
RUN mkdir -p /app/logs /app/models

# Changer les permissions
RUN chown -R appuser:appuser /app
USER appuser

# Exposer le port
EXPOSE $PORT

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:$PORT/health || exit 1

# Commande de démarrage avec Poetry
CMD ["poetry", "run", "uvicorn", "api.app:app", "--host", "0.0.0.0", "--port", "8000"]