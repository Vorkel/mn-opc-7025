# Dockerfile - Streamlit App avec Poetry
FROM python:3.11-slim

# Métadonnées
LABEL maintainer="claude@anthropic.com"
LABEL description="Application Streamlit de Credit Scoring avec Poetry"
LABEL version="1.0.0"

# Variables d'environnement
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    POETRY_NO_INTERACTION=1 \
    POETRY_VENV_IN_PROJECT=1 \
    POETRY_CACHE_DIR=/tmp/poetry_cache \
    POETRY_HOME="/opt/poetry" \
    POETRY_VERSION=2.1.4

# Créer un utilisateur non-root pour la sécurité
RUN groupadd -r appuser && useradd -r -g appuser appuser

# Répertoire de travail
WORKDIR /app

# Installation des dépendances système
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Installation de Poetry
RUN pip install --no-cache-dir poetry==$POETRY_VERSION

# Configuration Poetry pour conteneur
ENV PATH="$POETRY_HOME/bin:$PATH"

# Copier les fichiers de configuration Poetry
COPY pyproject.toml poetry.lock* ./

# Installer les dépendances uniquement
RUN poetry install --only=main --no-root && rm -rf $POETRY_CACHE_DIR

# Copier le code source
COPY . .

# Installer le package
RUN poetry install --only-root

# Créer les répertoires nécessaires
RUN mkdir -p /app/logs /app/models

# Changer les permissions
RUN chown -R appuser:appuser /app
USER appuser

# Exposer le port Streamlit
EXPOSE 8501

# Health check pour Streamlit
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Commande de démarrage avec Poetry
CMD ["poetry", "run", "streamlit", "run", "streamlit_app/streamlit_app.py", "--server.port=8501", "--server.address=0.0.0.0", "--server.headless=true"]