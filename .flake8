[flake8]
max-line-length = 88
extend-ignore =
    E203,
    W503,
    F401,
    F841,
    E402,
    F541,
    F601
exclude =
    .git,
    __pycache__,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    htmlcov,
    mlruns
per-file-ignores =
    __init__.py:F401,
    tests/*:F401,
    tests/*:F841
