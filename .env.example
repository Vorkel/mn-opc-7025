# Configuration d'environnement pour le projet de scoring crédit

# API Configuration
API_HOST=localhost
API_PORT=8000
API_DEBUG=False

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=credit_scoring_experiment

# Model Configuration
MODEL_PATH=models/best_credit_model.pkl
MODEL_THRESHOLD=0.5

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Database Configuration (si nécessaire)
# DATABASE_URL=sqlite:///credit_scoring.db

# Security Configuration
# API_SECRET_KEY=your-secret-key-here
# ALLOWED_HOSTS=localhost,127.0.0.1

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Monitoring Configuration
MONITORING_ENABLED=True
HEALTH_CHECK_INTERVAL=60

# Business Configuration
BUSINESS_COST_FN=10
BUSINESS_COST_FP=1

# Data Configuration
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed

# Render.com Configuration (pour déploiement)
